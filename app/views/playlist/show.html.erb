<div class="container-fluid text-center">
  <div class="row content">
    <div class="col-xs-2 col-sm-2 sidenav playlist-code">
      <p>Tell your friends to visit:</p>
      <p><%= request.original_url %></p>
    </div>
    <div class="col-xs-8 col-sm-8 text-left">
      <div class="container playlist">
        <h1>Uptune Playlist</h1>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th>Title</th>
                <th>Artist</th>
                <th>Votes</th>
            </tr>
            </thead>
            <tbody>
              <% @playlist.playlist_tracks.reorder_tracks_by_votes.each_with_index do |playlist_track, i| %>
              <tr>
                <div class="track-<%= i + 1 %>">
                  <td><%= i + 1%></td>
                  <td><%= playlist_track.track.title %></td>
                  <td><%= playlist_track.track.artist %></td>
                  <td><%= playlist_track.vote_count %></td>
                  <% unless playlist_track.votes.pluck(:token).include?(user_token) %>
                    <td><%= button_to "Upvote", action: "upvote_track", params: { playlist_track_id: playlist_track.id } %>
                      <span class="glyphicon glyphicon-circle-arrow-up	"></span>&nbsp;
                    </td>
                  <% end %>
                </div>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-xs-2 col-sm-2 sidenav">
      <div class="input-group">
        <input type="text" class="form-control search-query" placeholder="Search Spotify" name="query">
        <span class="input-group-btn">
          <button id="search-spotify" class="btn btn-default" type="button">Search</button>
        </span>
        <br>
      </div>
      <div id="search-results">
      </div>
    </div>
  </div>
</div>
