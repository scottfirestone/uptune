<div class="container-fluid text-center">
  <div class="row content">
    <div class="col-sm-2 sidenav playlist-code">
      <p>
        Your Playlist Code is: <%= link_to "#{@playlist.code}", playlist_path(@playlist.code) %>
      </p>
    </div>
    <div class="col-sm-8 text-left">
      <div class="container playlist">
        <h1> Current Playlist </h1>
        <table>
          <thead>
            <tr>
              <th>#</th>
              <th>Title</th>
              <th>Artist</th>
              <th>Votes</th>
          </tr>
          </thead>
          <tbody>
            <% @playlist.tracks.each_with_index do |track, i| %>
              <tr><%= i %></tr>
              <tr><%= track.title %></tr>
              <tr><%= track.artist %></tr>
              <tr>1</tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-sm-2 sidenav">
      <div id="custom-search-input">
       <div class="input-group col-md-12">
         <input type="text" class="search-query form-control" placeholder="Search Spotify", name="query"/>
         <span class="input-group-btn">
           <button id="search-spotify" class="btn btn-info" type="button">
             Search
             <!-- <span class=" glyphicon glyphicon-search"></span> -->
           </button>
         </span>
       </div>
       <div id="search-results">
       </div>
     </div>
    </div>
  </div>
</div>
